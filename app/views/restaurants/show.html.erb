<h1><%= @restaurant.name %></h1>
<h3><%= @restaurant.address %></h3>
<%= image_tag(@restaurant.image_url) %>



<% if current_user %>
	<%= form_for(@reservation) do |f| %>

		<%= f.hidden_field :restaurant_id %>

		<div class="field">
			<%= f.label :date %><br />
			<%= f.datetime_select :time%>
		</div>

		<div class="field">
			<%= f.label :party_size %><br />
			<%= f.number_field :party_size %>
		</div>

		<div class="actions">
			<%= f.submit %>
		</div>
	<% end %>
<% end %>
<h2>Your open reservations:</h2>
<% @reservations.each do |reservation| %>
	<p>Reservation at: <%= reservation.time.strftime("%A, %B %d at %I:%M%P") %> for <%= reservation.party_size %> guests.
	<%= button_to "Delete", {:controller => :reservations,
      :action => 'destroy', :id => reservation.id }, :method => :delete %></p>
<% end %>

<p><%= link_to 'Back', restaurants_path %></p>
