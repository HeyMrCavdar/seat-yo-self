<h1>Restaurants</h1>

<%= form_tag restaurants_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td id="restaurantimg"><%= link_to image_tag(restaurant.image_url), restaurant %></td>
        <td id="restaurantlink"><%= link_to restaurant.name, restaurant %></td>
      </tr>
    <% end %>
  </tbody>
</table>
