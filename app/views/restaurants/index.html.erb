<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td id="restaurantimg"><%= link_to image_tag(restaurant.image_url), restaurant %></td>
        <td id="restaurantlink" class="button"><%= link_to restaurant.name, restaurant %></td>
      </tr>
    <% end %>
  </tbody>
</table>
